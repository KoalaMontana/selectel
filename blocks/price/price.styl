.price
    padding-top: 48px
    display: flex
    flex-direction: column
    &__item 
        display: flex
        flex-direction: column
        border: 2px solid rgba(0, 0, 0, 0.8)
        border-radius: 8px
        margin-bottom: 24px
        padding: 24px
        &:last-child
            margin-bottom: 0
        &> div 
            min-width: 120px
            font-size: 18px
            margin-bottom: 16px
            &:before 
                content: attr(data-head)
                display: flex
                opacity: 0.8
                font-size: 16px
            &:last-child
                margin-bottom: 0
    &__load 
        display: flex
        min-height: 300px
        position: relative
        flex: 1
        opacity: 1
        &:after
            content: ""
            display: block
            position: absolute
            width: 48px
            height: 48px 
            top: 50%
            left: 50%
            transform: translate(-50%,-50%)
            background: url('.././img/loader.svg') center center no-repeat
            background-size: cover;
        &.loaded 
            opacity: 0
            min-height: 0
            transition: opacity .3s, max-height .3s;
            &:after
                width: 0
                height: 0
                transition: width .3s, height .3s;

    &__error 
        text-align: center
        color: red
                    
@media (min-width: 768px) 
    .price
        &__item
            flex-direction: row
            justify-content: space-between
            align-items: center
            &> div
                margin-bottom: 0
                &:before 
                    content: ""
                    display: none
            &:first-child > div
                position: relative
                &:before 
                    content: attr(data-head)
                    display: block
                    position: absolute
                    top: -80px
                    left: 0;
                    opacity: 0.8
            &_cpu 
                min-width: 240px !important