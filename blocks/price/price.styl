.price
    padding-top: 48px
    display: flex
    flex-direction: column
    &__item 
        display: flex
        flex-direction: column
        border: 2px solid rgba(0, 0, 0, 0.8)
        border-radius: 8px
        margin-bottom: 24px
        padding: 24px
        &:last-child
            margin-bottom: 0
        &> div 
            min-width: 140px
            font-size: 18px
            margin-bottom: 16px
            &:before 
                content: attr(data-head)
                display: flex
                opacity: 0.8
                font-size: font-size-basic
            &:last-child
                margin-bottom: 0
                    
@media (min-width: 768px) 
    .price
        &__item
            flex-direction: row
            justify-content: space-between
            align-items: center
            &> div
                margin-bottom: 0
                &:before 
                    content: ""
                    display: none
            &:first-child > div
                position: relative
                &:before 
                    content: attr(data-head)
                    display: block
                    position: absolute
                    top: -80px
                    left: 0;
                    opacity: 0.8
        